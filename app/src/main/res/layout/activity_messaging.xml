<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:animateLayoutChanges="true"
    style="@style/AppSlideTheme"
    tools:context=".activities.messaging.MessagingActivity">

    <ru.etysoft.cute.components.dynamic.ThemeImageView
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"

        app:themeBackgroundTint="colorDivider"
        android:background="@color/colorDivider"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ru.etysoft.cute.components.dynamic.ThemeImageView
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:themeBackgroundTint="colorDivider"
        android:layout_marginTop="50dp"
        android:background="@color/colorDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ru.etysoft.cute.components.Avatar
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:onClick="showChatInfo"
        app:layout_constraintBottom_toTopOf="@+id/divider3"
        app:layout_constraintStart_toEndOf="@+id/menuButton2"
        app:layout_constraintTop_toTopOf="parent" />


    <ru.etysoft.cute.components.dynamic.ThemeImageView
        android:id="@+id/menuButton2"
        android:layout_width="30dp"
        android:paddingHorizontal="6dp"
        android:paddingVertical="14dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?actionBarItemBackground"
        android:onClick="back"
        app:themeImageColor="colorBackButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_back_arrow" />

    <ru.etysoft.cute.components.dynamic.DynamicTextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserratalternates_medium"
        android:maxLines="1"
        android:onClick="showChatInfo"
        android:paddingTop="4dp"
        android:text=".."

        android:textSize="18sp"
        app:themeColor="colorTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <ru.etysoft.cute.components.dynamic.DynamicTextView
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserrat"
        android:maxLines="1"
        android:onClick="showChatInfo"
        android:text=".."
        android:textColor="@color/colorSupportText"
        android:textSize="12sp"
        app:themeColor="colorSupportText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ru.etysoft.cute.components.dynamic.DynamicTextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        android:paddingVertical="4dp"
        android:textColor="@color/colorTextDark"
        android:paddingHorizontal="8dp"
        android:textSize="12sp"
        android:visibility="visible"
        android:text="2 апреля, 2022"
        android:fontFamily="@font/montserratalternates_medium"
        android:background="@drawable/square_text_background"
        app:themeColor="colorTextDark"
        app:themeColorBackground="colorTextBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundImage" />

    <ru.etysoft.cute.components.dynamic.ThemeLinearLayout
        android:id="@+id/bottom_scroll_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle_bottom_scroll"
        android:elevation="2dp"
        app:themeBackgroundColor="colorBackground"
        android:visibility="visible"
        android:onClick="scrollToBottom"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent" >
        <ru.etysoft.cute.components.dynamic.ThemeImageView
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="match_parent"
            android:background="?actionBarItemBackground"
            app:themeBackgroundTint="colorBackground"
            app:themeImageColor="colorAccentIcon"
            app:srcCompat="@drawable/icon_popup_arrow"
            />
    </ru.etysoft.cute.components.dynamic.ThemeLinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/fwdContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <ru.etysoft.cute.components.ForwardedMessage
                android:id="@+id/forwardedMessagePreview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <ru.etysoft.cute.components.dynamic.ThemeImageView
                android:layout_width="20dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/icon_close"
                android:layout_height="30dp"
                android:onClick="clearForwardButtonClick"
                app:themeBackgroundTint="colorIconTint"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ru.etysoft.cute.components.dynamic.ThemeImageView
            android:id="@+id/imageView5"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginVertical="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="bottom"
            android:background="@drawable/circle_gray"
            android:padding="5dp"
            android:onClick="pickFiles"
            app:themeImageColor="colorIconSupportTint"
            app:themeBackgroundTint="colorBackgroundElements"
            app:srcCompat="@drawable/icon_image"
            app:tint="@color/colorSupportText" />

        <ru.etysoft.cute.components.dynamic.DynamicEditText
            android:id="@+id/message_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="8dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:fontFamily="@font/montserratmedium"
            android:hint="@string/your_message"
            android:textColor="@color/colorMessageText"
            android:inputType="textMultiLine|textCapSentences"
            android:maxHeight="150dp"
            android:textColorHint="@color/colorSupportText"
            app:themeColor="colorMessageText"
            android:textSize="16sp" />

        <ru.etysoft.cute.components.dynamic.ThemeImageView
            android:id="@+id/sendButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="bottom"
            android:layout_marginVertical="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/circle_button_accent"
            android:onClick="onSendMessageButtonClick"
            android:padding="8dp"

            app:themeImageColor="colorIconTintAccent"
            app:themeBackgroundTint="colorButton"
            app:srcCompat="@drawable/icon_send"

             />
        </LinearLayout>
    </LinearLayout>




    <ru.etysoft.cute.components.dynamic.ThemeImageView
        android:id="@+id/sendVoice"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginVertical="7dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/circle_button_accent"

        android:padding="8dp"
        android:elevation="1dp"
        app:themeImageColor="colorIconTintAccent"
        app:themeBackgroundTint="colorButton"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:srcCompat="@drawable/icon_microphone" />



    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:alpha="0"
        android:src="@drawable/houses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/messages"
       />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messages"
        android:layout_width="0dp"
        android:layout_height="0dp"


        android:clipToPadding="false"

        android:background="@color/colorTransparent"
        app:stackFromEnd="true"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/divider4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3">

    </androidx.recyclerview.widget.RecyclerView>

    <ru.etysoft.cute.components.dynamic.ThemeLinearLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/messages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/messages"
        app:themeBackgroundColor="colorBackground">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:theme="@style/progressBarBlue" />

    </ru.etysoft.cute.components.dynamic.ThemeLinearLayout>


    <LinearLayout
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/messages">


        <ru.etysoft.cute.components.ErrorPanel
            android:id="@+id/error_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/err_messages_title"
            android:textColor="@color/colorText"
            android:textSize="24sp"
            app:text="@string/err_messages_text"
            app:title="@string/err_messages_title" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="40dp"
        android:layout_weight="1"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:orientation="vertical"

        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/messages">


        <ru.etysoft.cute.components.InfoPanel
            android:id="@+id/info_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/dialog_empty_title"
            android:textColor="@color/colorText"
            android:textSize="24sp"
            app:text="@string/dialog_empty_text"
            app:title="@string/dialog_empty_title" />


    </LinearLayout>

    <ru.etysoft.cute.components.dynamic.ThemeLinearLayout
        android:id="@+id/recordPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorBackground"
        android:gravity="center"

        app:themeBackgroundColor="colorBackground"
        android:orientation="vertical"
        android:visibility="invisible"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sendVoice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3">

        <ru.etysoft.cute.components.dynamic.DynamicTextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            app:themeColor="colorSupportText"
            android:gravity="center"
            android:text="@string/wait_for_record" />
    </ru.etysoft.cute.components.dynamic.ThemeLinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>