<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageback"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:paddingVertical="6dp"
    android:paddingLeft="60dp"
    android:paddingRight="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/state"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:layout_weight="0"
            android:fontFamily="@font/montserrat"

            android:gravity="bottom"
            android:textColor="@color/colorSupportText"
            android:textSize="12sp"
            app:srcCompat="@drawable/icon_clock" />

        <TextView
            android:id="@+id/timeview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:gravity="bottom"
            android:paddingBottom="7dp"
            android:text=""
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorSupportText"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/mymessage"
            android:orientation="vertical">
            <ru.etysoft.cute.components.MessageTextView
                android:id="@+id/message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:layout_margin="10dp"
                android:textIsSelectable="true"
                android:text="Это сообщение с очень длииииииииииииииинными словами"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorText"
                android:includeFontPadding="false"
                android:textSize="@dimen/messageText"
              />

            <ru.etysoft.cute.components.Attachments
                android:id="@+id/attachments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="4dp"
                android:layout_marginTop="-8dp"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>