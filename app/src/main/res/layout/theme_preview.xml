<?xml version="1.0" encoding="utf-8"?>
<ru.etysoft.cute.components.dynamic.ThemeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:background="@drawable/huge_button"
    android:backgroundTint="@color/colorBackgroundElement"
    android:orientation="vertical"
    app:themeBackgroundColor="colorBackgroundElement">

    <RelativeLayout
        android:id="@+id/themePreviewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/square_element_background"

        android:backgroundTint="@color/colorBackground"
        android:padding="5dp">

        <ImageView
            android:id="@+id/themePreviewMyMessage"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginHorizontal="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="0dp"

            android:src="@drawable/square_element_background" />

        <ImageView
            android:id="@+id/themePreviewChatMessage"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="end"
            android:layout_marginHorizontal="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"

            android:src="@drawable/square_element_background"
            app:tint="@color/colorMessage" />

    </RelativeLayout>

    <ru.etysoft.cute.components.dynamic.DynamicTextView
        android:id="@+id/themePreviewThemeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratalternates_medium"
        android:gravity="center"
        android:padding="5dp"
        android:text="Default"
        android:textColor="@color/colorTextAccent"
        android:textSize="12sp"
        app:themeColor="colorTextAccent" />

</ru.etysoft.cute.components.dynamic.ThemeLinearLayout>