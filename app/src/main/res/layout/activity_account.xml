<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activities.Account">

    <ru.etysoft.cute.components.dynamic.ThemeLinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/square_rounded_top_gray"
        android:orientation="horizontal"
        android:padding="20dp"
        app:themeBackgroundColor="colorAccountTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ru.etysoft.cute.components.Avatar
            android:id="@+id/userimage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1">

                    <ru.etysoft.cute.components.dynamic.DynamicTextView
                        android:id="@+id/login"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:background="?attr/selectableItemBackground"
                        android:drawableEnd="@drawable/icon_popup_arrow"
                        android:fontFamily="@font/montserratalternates_medium"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="karlov"
                        android:textColor="@color/colorTextAccent"
                        app:themeColor="colorTextAccent"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ru.etysoft.cute.components.dynamic.ThemeImageView
                        android:id="@+id/editProfile"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:background="?actionBarItemBackground"
                        android:padding="4dp"
                        app:srcCompat="@drawable/icon_edit"
                        app:themeImageColor="colorSupportButton"/>


                    <ru.etysoft.cute.components.dynamic.ThemeImageView
                        android:id="@+id/imageView20"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:background="?actionBarItemBackground"
                        android:padding="4dp"
                        app:themeImageColor="colorSupportButton"
                        app:srcCompat="@drawable/icon_qr_code"
                       />

                    <ru.etysoft.cute.components.dynamic.ThemeImageView
                        android:id="@+id/setting"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:background="?actionBarItemBackground"
                        android:padding="4dp"
                        app:themeImageColor="colorSupportButton"
                        app:srcCompat="@drawable/icon_settings"
                        />
                </LinearLayout>
            </LinearLayout>

            <ru.etysoft.cute.components.dynamic.DynamicTextView
                android:id="@+id/statusView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:textSize="12sp"
                app:themeColor="colorSupportText"
                app:themeColorLink="colorTextLink"
                android:fontFamily="@font/montserrat"
                android:text="@string/no_status" />


        </LinearLayout>


    </ru.etysoft.cute.components.dynamic.ThemeLinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/friendsView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:layout_marginTop="10dp"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <ru.etysoft.cute.components.dynamic.ThemeImageView
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:padding="5dp"
                            app:themeImageColor="colorIconTint"
                            app:srcCompat="@drawable/icon_people"
                            />
                        <ru.etysoft.cute.components.dynamic.DynamicTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratalternates_medium"
                            android:singleLine="true"
                            android:text="@string/friends"
                            android:textColor="@color/colorTextAccent"
                            android:textSize="20sp"
                            app:localizableKey="friends"
                            app:themeColor="colorTextAccent"/>
                        <TextView
                            android:id="@+id/friendsCountView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/montserratalternates_medium"
                            android:singleLine="true"
                            android:text=""
                            android:layout_weight="1"
                            android:paddingLeft="8dp"
                            android:textColor="@color/colorSupportText"
                            android:textSize="14sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_gravity="right"
                            android:padding="10dp"
                            app:srcCompat="@drawable/icon_expand_right"
                            app:tint="@color/colorIconSupportTint" />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/friendSnippets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/musicView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:layout_marginTop="10dp"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <ru.etysoft.cute.components.dynamic.ThemeImageView
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:padding="5dp"
                            app:themeImageColor="colorIconTint"
                            app:srcCompat="@drawable/icon_music"
                            />
                        <ru.etysoft.cute.components.dynamic.DynamicTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserratalternates_medium"
                            android:singleLine="true"
                            android:text="@string/music"
                            android:textColor="@color/colorTextAccent"
                            android:textSize="20sp"
                            app:localizableKey="music"
                            app:themeColor="colorTextAccent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/montserratalternates_medium"
                            android:singleLine="true"
                            android:text=""
                            android:layout_weight="1"
                            android:paddingLeft="8dp"
                            android:textColor="@color/colorSupportText"
                            android:textSize="14sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_gravity="right"
                            android:padding="10dp"
                            app:srcCompat="@drawable/icon_expand_right"
                            app:tint="@color/colorIconSupportTint" />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/musicSnippets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>