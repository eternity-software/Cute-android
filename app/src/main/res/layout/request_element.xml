<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/square_rounded_corners_gray"
        android:padding="8dp">
        <ru.etysoft.cute.components.Avatar
            android:id="@+id/avatarView"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/displayNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/colorTextDark"
                android:fontFamily="@font/montserratalternates_medium"
                />
            <TextView
                android:id="@+id/onlineView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="online"
                android:paddingTop="4dp"
                android:textSize="12sp"
                android:textColor="@color/state_green"
                android:fontFamily="@font/montserratalternates_medium"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/declineButton"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:srcCompat="@drawable/icon_deny"
            app:tint="@color/colorIconTint" />
        <ImageView
            android:id="@+id/acceptButton"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:padding="6dp"
            app:srcCompat="@drawable/icon_add"
            app:tint="@color/colorIconTint" />
    </LinearLayout>

</RelativeLayout>