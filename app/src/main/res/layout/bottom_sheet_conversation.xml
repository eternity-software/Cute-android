<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent">


    <androidx.cardview.widget.CardView
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-20dp"
        android:paddingBottom="20dp"
        app:behavior_skipCollapsed="true"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    app:srcCompat="@drawable/circle_gradiaent" />

                <TextView
                    android:id="@+id/conv_acronym"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="-75dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="П"
                    android:textColor="@color/colorWhite"
                    android:textSize="36sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/conv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:maxLines="1"
                        android:text="Пацаны смотрите как могу "
                        android:textColor="@color/colorText"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/conv_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:maxLines="3"
                        android:text="r7ZBTSIJDweQc0fIVFB0SWwKJ8oeWyAt5SE0D0GxR3j4s9x0Ef "
                        android:textColor="@color/colorSupportText"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/motherButtons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <ImageButton
                            android:id="@+id/notification_button"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_active_mini"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:maxLines="1"
                            android:scaleType="centerInside"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            app:srcCompat="@drawable/icon_notifications" />

                        <ImageButton
                            android:id="@+id/ButtonActive"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_active_mini"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:maxLines="1"
                            android:scaleType="centerInside"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            app:srcCompat="@drawable/icon_edit" />


                        <ImageButton
                            android:id="@+id/conv_delete"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/button_passive_mini"
                            android:fontFamily="@font/montserrat"

                            android:gravity="center"
                            android:maxLines="1"
                            android:scaleType="centerInside"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            android:tint="@color/colorFrontElements"
                            app:srcCompat="@drawable/icon_delete" />

                        <ImageButton
                            android:id="@+id/conv_exit"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/button_passive_mini"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"

                            android:maxLines="1"
                            android:scaleType="centerInside"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            android:tint="@color/colorFrontElements"
                            app:srcCompat="@drawable/icon_exit" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/membersCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:maxLines="1"
                android:text="12 members"
                android:textColor="@color/colorSupportText"
                android:textSize="12sp" />

            <ListView
                android:id="@+id/members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>