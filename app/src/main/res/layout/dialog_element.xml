<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/dialog_unread_background"
        android:paddingVertical="6dp"

        android:paddingRight="10dp">

        <ru.etysoft.cute.components.Avatar
            android:id="@+id/avatar_component"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp" />




        <TextView
            android:id="@+id/readed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-20dp"


            android:background="@drawable/back_new"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:keepScreenOn="true"
            android:paddingHorizontal="8dp"
            android:singleLine="true"
            android:text=" "
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:baselineAligned="true"
                android:clipChildren="true"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratalternates_medium"
                        android:singleLine="true"
                        android:text="Знаешь, Таня"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/montserratmedium"
                    android:maxLines="1"
                    android:paddingRight="1dp"
                    android:text="Таня: "
                    android:textColor="@color/colorTextAccent"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratmedium"
                    android:paddingRight="6dp"
                    android:singleLine="true"
                    android:text="не передать словами то, как я "
                    android:textColor="@color/colorMessageText"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/montserrat"
                        android:minWidth="10dp"
                        android:text="9:41"
                        android:textColor="@color/colorText"
                        android:textSize="14sp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>