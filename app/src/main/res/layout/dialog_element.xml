<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp">

    <ru.etysoft.cute.components.dynamic.ThemeLinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/dialog_unread_background"
        android:paddingVertical="6dp"
        android:paddingRight="10dp"

        app:themeBackgroundColor="colorUnreadBackground">

        <ru.etysoft.cute.components.Avatar
            android:id="@+id/avatar_component"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp" />


        <ru.etysoft.cute.components.dynamic.DynamicTextView
            android:id="@+id/readed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-20dp"


            android:background="@drawable/back_new"

            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:keepScreenOn="true"
            android:paddingHorizontal="8dp"
            android:singleLine="true"
            android:text=" "
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:themeColorBackground="colorMainLight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:baselineAligned="true"
                android:clipChildren="true"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ru.etysoft.cute.components.dynamic.DynamicTextView
                        android:id="@+id/label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratalternates_medium"
                        android:singleLine="true"
                        android:text="Знаешь, Таня"
                        android:textColor="@color/colorText"
                        android:textSize="18sp"
                        app:themeColor="colorText" />
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ru.etysoft.cute.components.dynamic.DynamicTextView
                        android:id="@+id/message_accent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/montserratmedium"
                        android:maxLines="1"
                        android:paddingRight="1dp"

                        android:singleLine="true"
                        android:text="Таня:"
                        android:textColor="@color/colorTextAccent"
                        android:textSize="14sp"
                        app:themeColor="colorTextAccent" />

                    <ru.etysoft.cute.components.dynamic.DynamicTextView
                        android:id="@+id/message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserratmedium"
                        android:paddingRight="6dp"
                        android:singleLine="true"
                        android:text="не передать словами то, как я люблю снюс"

                        android:textSize="14sp"
                        app:themeColor="colorMessageText"
                        app:themeColorLink="colorMyMessageLink" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">


                    <ru.etysoft.cute.components.dynamic.DynamicTextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/montserrat"
                        android:minWidth="10dp"
                        android:text="9:41"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"
                        app:themeColor="colorText" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ru.etysoft.cute.components.dynamic.ThemeLinearLayout>
</LinearLayout>