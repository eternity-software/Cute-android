<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppSlideTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorTransBlack"
    tools:context=".activities.ImagePreview">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="exit">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/photoView"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/houses"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/conv_delete"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_passive_mini"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:alpha="0.7"
            android:maxLines="1"
            android:onClick="save"
            android:paddingVertical="7dp"
            android:scaleType="centerInside"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:tint="@color/colorFrontElements"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@android:drawable/stat_sys_download" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>