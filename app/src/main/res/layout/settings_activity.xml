<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <ru.etysoft.cute.components.dynamic.ThemeLinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/square_rounded_top_gray"
        android:orientation="horizontal"
        android:padding="14dp"
        app:themeBackgroundColor="colorAccountTop"
      >

        <ru.etysoft.cute.components.Avatar
            android:id="@+id/userimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1">

                    <ru.etysoft.cute.components.dynamic.DynamicTextView
                        android:id="@+id/login"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:background="?attr/selectableItemBackground"
                        android:drawableEnd="@drawable/icon_popup_arrow"
                        android:fontFamily="@font/montserratalternates_medium"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="karlov"
                        android:textColor="@color/colorTextAccent"
                        app:themeColor="colorTextAccent"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ru.etysoft.cute.components.dynamic.ThemeImageView
                        android:id="@+id/editProfile"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:background="?actionBarItemBackground"
                        android:padding="4dp"
                        app:srcCompat="@drawable/icon_signin"
                        app:themeImageColor="colorOrange"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ru.etysoft.cute.components.dynamic.ThemeLinearLayout>

    <ru.etysoft.cute.components.dynamic.DynamicTextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/montserratalternates_medium"
        android:gravity="bottom"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:text="@string/login_and_auth"
        android:textColor="@color/colorTextAccent"
        app:localizableKey="login_and_auth"
        app:themeColor="colorSupportText"
        android:textSize="14sp" />

    <ru.etysoft.cute.components.HugeButton
        style="?selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:hugeButtonText="session_management"
        app:hugeButtonIcon="@drawable/icon_key"
       />

    <ru.etysoft.cute.components.HugeButton
        style="?selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        app:hugeButtonText="login_and_auth"
        app:hugeButtonIcon="@drawable/icon_lock"
        android:onClick="openSessionManagement"
        />

    <ru.etysoft.cute.components.dynamic.DynamicTextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/montserratalternates_medium"
        android:gravity="bottom"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:text="@string/app"
        android:textColor="@color/colorTextAccent"
        app:localizableKey="app"
        app:themeColor="colorSupportText"
        android:textSize="14sp" />

    <ru.etysoft.cute.components.HugeButton
        style="?selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        app:hugeButtonText="appearance"
        app:hugeButtonIcon="@drawable/icon_appearance"
        android:onClick="openSessionManagement"
        />



    <FrameLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>