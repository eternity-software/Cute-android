<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageback"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingVertical="6dp"
    android:paddingLeft="56dp"
    android:paddingRight="60dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_message"
            android:orientation="vertical">


            <ru.etysoft.cute.components.MessageTextView
                android:id="@+id/message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:autoLink="all"
                android:fontFamily="@font/montserrat"
                android:text="Message text"
                android:textColor="#fff"
                android:textColorLink="@color/colorTextLink"
                android:textIsSelectable="true"
                android:textSize="@dimen/messageText" />

            <ru.etysoft.cute.components.Attachments
                android:id="@+id/attachments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:visibility="gone"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/timeview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"

            android:fontFamily="@font/montserrat"
            android:gravity="bottom"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="00:00"
            android:textColor="@color/colorSupportText"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>