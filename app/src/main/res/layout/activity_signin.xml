<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:id="@+id/content"
    tools:context=".activities.signin.SignInActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:foregroundGravity="center_horizontal"
                    app:srcCompat="@drawable/icon_signin" />

                <ru.etysoft.cute.lang.components.LocalizableTextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/montserratalternates_medium"
                    android:gravity="center"
                    android:text="@string/sign_in"
                    android:textColor="@color/colorMainText"
                    android:textSize="40sp"
                    app:localizableKey="sign_in" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/sub_passwords"
                app:localizableKey="sub_passwords" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_text_passive_double"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edittext_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/icon_person"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:foregroundGravity="left|clip_horizontal"
                    android:hint="@string/login"
                    android:inputType="textPersonName"
                    android:maxLength="255"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorHint" />


                <EditText
                    android:id="@+id/edittext_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/icon_pass"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:foregroundGravity="left|clip_horizontal"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorHint" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/error_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="45dp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/icon_error" />

                <TextView
                    android:id="@+id/error_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="Test error"
                    android:textColor="@color/colorError"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/square_rounded_top"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_passive_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/button7"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/montserrat"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorText"
                    android:textSize="18sp"
                    app:srcCompat="@drawable/icon_back_arrow" />


            </LinearLayout>

            <Button
                android:id="@+id/button_next"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_passive_selector"
                android:fontFamily="@font/montserrat"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/colorPassiveButtonText"
                android:textSize="18sp" />
        </LinearLayout>

        <ru.etysoft.cute.lang.components.LocalizableTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/next_button_privacy_policy"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:localizableKey="next_button_privacy_policy" />

        <ru.etysoft.cute.lang.components.LocalizableTextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/montserratmedium"
            android:gravity="center"
            android:text="@string/privacy_policy"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:localizableKey="privacy_policy" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>